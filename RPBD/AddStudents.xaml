<Window x:Class="RPBD.AddStudents"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RPBD"
        mc:Ignorable="d"
        Title="AddStudents" Height="450" Width="800">
    <StackPanel Margin="10">
        <TextBlock Text="Имя" Margin="10"/>
        <TextBox x:Name="firstNameTb" Margin="10" Height="20"/>
        <TextBlock Text="Фамилия" Margin="10"/>
        <TextBox x:Name="lastNameTb" Margin="10" Height="20"/>
        <TextBlock Text="Группа" Margin="10"/>
        <ComboBox x:Name="groupCb" Margin="10" Height="20"/>
        <Button x:Name="addBtn" Content="Добавить" FontSize="15" Width="100" Background="AliceBlue" Margin="10" Click="AddBtn_Click"/>
    </StackPanel>
</Window>
